print ('Введите первое число')
x = float(input())
print ('введите действие')
action = str(input())
print ('введите второе число')
y = float(input())

result = ()

if action == '+':
    result = x + y
elif action == '/':
    result = x / y
elif action == '*':
    result = x * y
elif action == '-':
    result = x - y
print (result)
